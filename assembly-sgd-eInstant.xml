<assembly>
	<id>sgd</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>.settings</exclude>
				<exclude>.classpath</exclude>
				<exclude>.project</exclude>
			</excludes>
			<includes>
				<include>.*</include>
				<include>GLEConfig.xml</include>
			</includes>
		</fileSet>
		<!-- APP - Filtered/Unfiltered directories -->
		<fileSet>
			<directory>${basedir}/target/</directory>
			<outputDirectory>/app/filtered/domains/platform/</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/</directory>
			<outputDirectory>/app/unfiltered/domains/platform/</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
		<!--fileSet><directory>${basedir}/target/</directory><outputDirectory>/app/filtered/domains/admin/autodeploy/WagerWorksAdmin.ear/classes</outputDirectory><includes><include>*.jar</include></includes></fileSet-->
		<!-- APP/Unfiltered -->
		<!--fileSet><directory>${basedir}/target/</directory><outputDirectory>/app/unfiltered/domains/platform/autodeploy/WagerWorks.ear/classes</outputDirectory><includes><include>*.jar</include></includes></fileSet><fileSet><directory>${basedir}/target/</directory><outputDirectory>/app/unfiltered/domains/admin/autodeploy/WagerWorksAdmin.ear/classes</outputDirectory><includes><include>*.jar</include></includes></fileSet-->
		<fileSet>
			<directory>${basedir}/target/paytables/demo</directory>
			<outputDirectory>/app/unfiltered/tools/gleForce</outputDirectory>
			<includes>
				<include>*-Force.*</include>
			</includes>
			<excludes>
				<exclude>**/*.md5</exclude>
				<exclude>**/*.sha1</exclude>
			</excludes>
		</fileSet>
		<!-- WEB/Filtered -->
		<fileSet>
			<directory>${basedir}/target/deploy/release/apache/</directory>
			<outputDirectory>/web/filtered/</outputDirectory>
			<excludes>
				<exclude>htdocs/app/studios/*/games/*/*-forceData.*</exclude>
			</excludes>
			<includes>
				<include>htdocs/app/studios/*/games/*/**/*</include>
			</includes>
		</fileSet>
		<!-- WEB/Unfiltered -->
		<fileSet>
			<directory>${basedir}/target/deploy/debug/apache/</directory>
			<outputDirectory>/web/unfiltered/</outputDirectory>
			<includes>
				<include>htdocs/app/studios/*/games/*/**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/deploy/release/apache/</directory>
			<outputDirectory>/web/unfiltered/</outputDirectory>
			<includes>
				<include>htdocs/app/studios/*/games/*/*-forceData.*</include>
			</includes>
		</fileSet>
		<!-- DBGAMES/Official -->
		<fileSet>
			<directory>${basedir}/target/paytables/official</directory>
			<outputDirectory>/dbgames/official/datafiles</outputDirectory>
			<includes>
				<include>*Paytable*.*</include>
				<include>*Init.*</include>
				<include>*Stage.*</include>
				<include>*Mapping.*</include>
				<include>*Filter.*</include>
				<include>*Ghst.*</include>
				<include>*GhstTran*.*</include>
			</includes>
			<excludes>
				<exclude>*-Force.*</exclude>
			</excludes>
		</fileSet>
		<!-- DBGAMES/Unofficial -->
		<fileSet>
			<directory>${basedir}/target/paytables/demo</directory>
			<outputDirectory>/dbgames/demo/datafiles</outputDirectory>
			<includes>
				<include>*Paytable*.*</include>
				<include>*Init.*</include>
				<include>*Stage.*</include>
				<include>*Mapping.*</include>
				<include>*Filter.*</include>
				<include>*Ghst.*</include>
				<include>*GhstTran*.*</include>
				<include>paytable_*.xml</include>
			</includes>
			<excludes>
				<exclude>*-Force.*</exclude>
			</excludes>
		</fileSet>
		<!-- DBGAMES/Loadscript -->
		<fileSet>
			<directory>${basedir}/target/paytables</directory>
			<outputDirectory>/dbgames/official</outputDirectory>
			<includes>
				<include>load_gt*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/paytables</directory>
			<outputDirectory>/dbgames/demo</outputDirectory>
			<includes>
				<include>load_gt*.*</include>
			</includes>
		</fileSet>
		<!-- DBGAMES/Common -->
		<fileSet>
			<directory>${basedir}/target/dependencies/install</directory>
			<outputDirectory>/dbgames/official</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/target/dependencies/install</directory>
			<outputDirectory>/dbgames/demo</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
        <!-- Package eInstant game -->
        <fileSet>
            <directory>${basedir}/target/eInstant</directory>
            <outputDirectory>/eInstant</outputDirectory>
        </fileSet>
	</fileSets>
</assembly>
